@{
    ViewData["Title"] = "Home Page";
}
@model List<FAQ>
<div>
    <div class="row mb-1 mt-5">
        <div class="col-3">
            <!--spaceholder-->
        </div>
        <div class="col-9">
            <ul class="nav">
                <li class="nav-item">
                    <a asp-action="Index" asp-route-topic="" asp-route-category="" class="nav-link text-black fw-bold">
                        All FAQs
                    </a> @* TODO: Switch the text-black and fw-bold based on active search*@
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-route-topic="bs" asp-route-category="@ViewData["Category"]" class="nav-link text-muted">Bootstrap</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-route-topic="cs" asp-route-category="@ViewData["Category"]" class="nav-link text-muted">
                        C#
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-route-topic="js" asp-route-category="@ViewData["Category"]" class="nav-link text-muted">Javascript</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="">
    <div class="row">
        <nav class="col-3 ">
            <ul class="list-group">
                <li class="list-group-item interactive-list-item">
                    <a class="text-decoration-none" asp-controller="Home" asp-action="Index" asp-route-topic="@ViewData["Topic"]" asp-route-category="gen">General</a>
                </li>
                <li class="list-group-item interactive-list-item">
                    <a class="text-decoration-none" asp-controller="Home" asp-action="Index" asp-route-topic="@ViewData["Topic"]" asp-route-category="hist">History</a>
                </li>
            </ul>
        </nav>
        <main class="col-9">
            <ul class="list-group">
                @foreach (var faq in Model)
                {
                    <li class="list-group-item interactive-list-item">
                        <div>
                            <div class="row">
                                <p class="">
                                    <strong>@faq.Question</strong> <span class="">@faq.Answer</span>
                                </p>
                                <br>
                            </div>
                            <div class="row">
                                <div class="col-6 text-muted">
                                    Topic: @faq.Topic?.Name
                                </div>
                                <div class="col-6 text-muted">
                                    Category: @faq.Category?.Name
                                </div>
                            </div>

                        </div>
                    </li>
                }
            </ul>
        </main>
    </div>
</div>

